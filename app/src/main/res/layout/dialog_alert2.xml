<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_dialog_box"
    android:padding="@dimen/dimen_default">

    <TextView
        android:id="@+id/alert2DescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_default"
        android:textColor="@color/colorText"
        android:textSize="@dimen/textSize_normal"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/alert2ControllerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/alert2ControllerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert2DescriptionTextView">

        <TextView
            android:id="@+id/alert2CancelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_default"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/alert2DoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_default"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_normal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>