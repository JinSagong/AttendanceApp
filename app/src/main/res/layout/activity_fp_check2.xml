<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    tools:context=".view.FpCheck1Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/fpCheck2Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/fpCheck2ProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fpCheck2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fpCheck2LabelTextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/dimen_default"
                android:text="@string/fp_check_believer"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/textSize_label"
                app:layout_constraintBottom_toTopOf="@id/fpCheck2lineImageView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fpCheck2lineImageView1"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_line"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@id/fpCheck2RecyclerView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fpCheck2LabelTextView1"
                tools:ignore="ContentDescription" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fpCheck2RecyclerView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintBottom_toTopOf="@id/fpCheck2AddTextView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fpCheck2lineImageView1"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/fpCheck2AddTextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/WHITE"
                android:gravity="center"
                android:padding="@dimen/dimen_default"
                android:text="@string/fp_check_add"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_label"
                app:layout_constraintBottom_toTopOf="@id/fpCheck2lineImageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fpCheck2RecyclerView1" />

            <ImageView
                android:id="@+id/fpCheck2lineImageView2"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_line"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@id/fpCheck2LabelTextView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fpCheck2AddTextView1"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/fpCheck2LabelTextView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/dimen_default"
                android:text="@string/fp_check_word_movement"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/textSize_label"
                app:layout_constraintBottom_toTopOf="@id/fpCheck2lineImageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fpCheck2lineImageView3" />

            <ImageView
                android:id="@+id/fpCheck2lineImageView3"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_line"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@id/fpCheck2RecyclerView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fpCheck2LabelTextView2"
                tools:ignore="ContentDescription" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fpCheck2RecyclerView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintBottom_toTopOf="@id/fpCheck2AddTextView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fpCheck2lineImageView3"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/fpCheck2AddTextView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/WHITE"
                android:gravity="center"
                android:padding="@dimen/dimen_default"
                android:text="@string/fp_check_add"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_label"
                app:layout_constraintBottom_toTopOf="@id/fpCheck2lineImageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fpCheck2RecyclerView2" />

            <ImageView
                android:id="@+id/fpCheck2lineImageView4"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_line"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fpCheck2AddTextView2"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>